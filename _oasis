OASISFormat: 0.4
Name:        mirage-trace-viewer
Version:     0.1
Synopsis:    Graphical viewer of Lwt trace logs
Authors:     Thomas Leonard
License:     BSD-2-clause
Plugins:     META (0.4), DevFiles (0.4)

Flag collect
  Description:        true to build mirage-trace-collect tool (requires xen-gnt.unix)
  Default:            false

Flag gtk
  Description:        true to build the GTK viewer
  Default:            true

Flag javascript
  Description:        true to build the JavaScript viewer
  Default:            true
 
Library "mirage-trace-viewer"
  Path:       lib
  FindlibName: mirage-trace-viewer
  BuildTools: ocamlbuild
  Modules:    Mtv_render, Mtv_event, Mtv_layout, Mtv_thread, Mtv_view
  InternalModules: Mtv_ITree, Mtv_counter, Mtv_sorted_array
  BuildDepends: itv-tree,sexplib,sexplib.syntax,ocplib-endian.bigstring,cmdliner
  
Library "js"
  Path:       js
  Build$:     flag(javascript)
  BuildTools: ocamlbuild
  FindlibParent: mirage-trace-viewer
  FindlibName: js
  Modules:    Html_viewer
  BuildDepends: mirage-trace-viewer,js_of_ocaml,js_of_ocaml.syntax
  
Library "main"
  Path:       main
  Install:    false
  BuildTools: ocamlbuild
  BuildDepends: mirage-trace-viewer,dynlink
  Modules:	Plugin
  CompiledObject: best

Library "mtv-gtk-plugin"
  Path:       gtk
  FindlibParent: mirage-trace-viewer
  FindlibName: gtk
  Build$:     flag(gtk)
  BuildTools: ocamlbuild
  BuildDepends: lablgtk2,cairo2.lablgtk2,cairo2,main
  Modules:	Gtk_viewer
  CompiledObject: best

Executable "mirage-trace-viewer"
  Path:	      main
  BuildTools: ocamlbuild
  MainIs:     main.ml
  BuildDepends: main
  CompiledObject: best
  
Executable "mirage-trace-collect"
  Build$:     flag(collect)
  Path:       collect
  BuildTools: ocamlbuild
  MainIs:     collect.ml
  BuildDepends: xen-gnt, xen-gnt.unix, xenstore.client, xenstore.unix, xenstore_transport.unix, threads, str
  CompiledObject: best
